<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#fff"
    tools:context=".calculator_activity">

    <LinearLayout
        android:id="@+id/text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/expression_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:ellipsize="start"
            android:gravity="end"
            android:padding="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result_id"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:gravity="end"
            android:padding="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#000"
            android:textSize="45sp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adMob2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1300140105634028/9073510243" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent_LL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_id"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LL_1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/clear_id"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="CR" />

            <TextView
                android:id="@+id/open_bracket"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="(" />

            <TextView
                android:id="@+id/close_bracket"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text=")" />

            <TextView
                android:id="@+id/divide_id"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/seven_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="7" />

            <TextView
                android:id="@+id/eight_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="8" />

            <TextView
                android:id="@+id/nine_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="9" />

            <TextView
                android:id="@+id/multiply_id"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="X" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/four_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="4" />

            <TextView
                android:id="@+id/five_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="5" />

            <TextView
                android:id="@+id/six_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="6" />

            <TextView
                android:id="@+id/minus_id"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/one_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="1" />

            <TextView
                android:id="@+id/two_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="2" />

            <TextView
                android:id="@+id/three_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="3" />

            <TextView
                android:id="@+id/plus_id"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/dot_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="." />

            <TextView
                android:id="@+id/zero_id"
                style="@style/text_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="0" />

            <ImageView
                android:id="@+id/cut_id"
                android:layout_width="0dp"
                android:layout_height="55sp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_btn_bg"
                android:scaleType="center"
                android:src="@drawable/cut_logo"
                tools:ignore="NestedWeights" />

            <TextView
                android:id="@+id/equal_id"
                style="@style/expression_btn"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
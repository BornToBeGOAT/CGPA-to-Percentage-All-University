<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="For 10 Point Grading System (CBCS)"
            android:textColor="#111010"
            android:textSize="23sp" />

        <LinearLayout
            android:id="@+id/spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:text="Select University :"
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_id"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/spinner_border"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cgpi_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_layout"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:text="Enter CGPA :"
                android:textColor="#212121"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cgpa_id"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/spinner_border"
                android:hint="example: 7.68"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/cgpi_layout"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg"
            android:clickable="true"
            android:focusable="true"
            android:shadowColor="#F3D40C"
            android:text="Calculate"
            android:textSize="20sp" />

        <View
            android:id="@+id/line_id"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/submit_button"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            android:background="#0F0F0F" />

        <TextView
            android:id="@+id/percentage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_id"
            android:gravity="center"
            android:padding="0dp"
            android:text="Your Approximate Percentage is"
            android:textColor="#111111"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/percentage_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/percentage_title"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="83.67%"
            android:textColor="#111111"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/cal_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/percentage_text"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/button_bg"
            android:shadowColor="#F3D40C"
            android:text="Open Calculator"
            android:textSize="18sp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adMob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cal_btn"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1300140105634028/6647665649" />

        <!--         for testing ca-app-pub-3940256099942544/6300978111-->
        <!--         actual unit id  ca-app-pub-1300140105634028/6647665649-->

        <LinearLayout
            android:id="@+id/button_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/adMob"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/share_icon"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:background="#F9FCF8"
                    android:padding="0dp"
                    android:src="@drawable/share_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Share this app"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/email_icon"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:background="#F9FCF8"
                    android:padding="0dp"
                    android:src="@drawable/email_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email Us"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/rate_icon"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="#F9FCF8"
                    android:src="@drawable/rate_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Rate this app\n5 stars"
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/note_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_section"
            android:layout_margin="6dp"
            android:background="@drawable/spinner_border"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Semester Grade Point Average (SGPA) is equal to the credit index for a semester divided by the total number of credits registered by the student in that semester i.e (current semester pointer)."
                android:textColor="#0F0E0E"
                android:textSize="15sp" />

            <View
                android:id="@+id/line2_id"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="2dp"
                android:background="#0F0F0F" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Cumulative Grade Point Average (CGPA) gives the sum total of credit indices of all previous semesters divied by the total number of credits registered in all semesters i.e(Average pointer of all semesters)."
                android:textColor="#0F0E0E"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="NOTE:-Formula used for calculating percentage is as per standard conversion formula followed by respective Univeristy."
                android:textColor="#F82626"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="*if you find any kind of error/mistake regarding conversion formula.you can always mail me by using above button*"
                android:textColor="#1963F8"
                android:textSize="12sp"
                android:textStyle="italic" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>